#:kivy 1.0
#:import kivy kivy
<CustButton@Button>:
    font_size: 32
    color: 1, 1, 1, 1
<calculadora_screen>:
    size:self.size
    id:My_Calc
    display: entry
    padding: 3
    spacing: 5
    rows: 6
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
 
    BoxLayout:
        spacing: 6
        CustButton:
            text: "7"
            on_press:entry.text += self.text
         
        CustButton:
            text: "8"
            on_press:entry.text += self.text
        CustButton:
            text: "9"
            on_press:entry.text += self.text
        CustButton:
            text: "*"
            on_press:entry.text += self.text
 
 
    BoxLayout:
        spacing:6
        CustButton:
            text: "4"
            on_press:entry.text += self.text
         
        CustButton:
            text: "5"
            on_press:entry.text += self.text
        CustButton:
            text: "6"
            on_press:entry.text += self.text
        CustButton:
            text: "/"
            on_press:entry.text += self.text
 
 
    BoxLayout:
        spacing: 6
        CustButton:
            text: "1"
            on_press:entry.text += self.text        
        CustButton:
            text: "2"
            on_press:entry.text += self.text
        CustButton:
            text: "3"
            on_press:entry.text += self.text
        CustButton:
            text: "-"
            on_press:entry.text += self.text
         
         
    BoxLayout:
        spacing: 6
        CustButton:
            text: "AC"
            on_press:entry.text =""
        CustButton:
            text: "0"
            on_press:entry.text += self.text
        CustButton:
            text: "="
            on_press: My_Calc.calculate(entry.text)
        CustButton:
            text: "+"
            on_press:entry.text += self.text